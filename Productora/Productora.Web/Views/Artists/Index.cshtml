@model IEnumerable<Productora.Web.Models.Artist>

@{
    ViewBag.Title = "Artistas";
}
    <body class="Gradient_Album">
        <div class="container" style="margin-top:80px;">
            <div class="card">
                <div class="card-header" style="background-image:url(../../Content/img/Interface/Microphone.jpg); background-size:cover">
                    <div class="text-center text-white" style="margin-top:80px;">
                        <h1>Artistas</h1>
                        @if (User.IsInRole("Admin") || User.IsInRole("Artist"))
                        {
                            <a href="@Url.Action("Create", "Artists")" class="btn btn-success rounded-circle" style="font-weight:bold">+</a>
                        }
                        else
                        {
                            <div class="py-2"></div>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4">
                                <div class="card" style="width: 18rem;">
                                    <img style="width:100%; height:170px;" src="@Url.Action("getimagen", "Artists", new { id = item.Id })" alt="Imagen del artista">
                                    <div class="card-body text-center bg-dark text-white">
                                        <h5 class="card-title">
                                            @Html.DisplayFor(modelItem => item.StageName)
                                        </h5>
                                        <a href="@Url.Action("Edit", "Artists", new { id = item.Id })" class="btn btn-primary">Editar</a>
                                        <a href="@Url.Action("Details", "Artists", new { id = item.Id })" class="btn btn-success">Detalles</a>
                                        <a href="@Url.Action("Delete", "Artists", new { id = item.Id })" class="btn btn-danger">Eliminar</a>
                                    </div>
                                </div>
                            </div>
                        }
                        </div>
                    </div>
            </div>
        </div>
    </body>