@model IEnumerable<Productora.Web.Models.Artist>

@{
    ViewBag.Title = "Artistas";
}

    <div class="text-center" style="margin-top:80px;">
        <h1>Artistas</h1>
        @if (User.IsInRole("Admin")|| User.IsInRole("Artist"))
        {
            <a href="@Url.Action("Create", "Artists")" class="btn btn-success rounded-circle" style="font-weight:bold">+</a>
        }
        else
        {
            <div class="py-2"></div>
        }
    </div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.artimg)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.artimg)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
