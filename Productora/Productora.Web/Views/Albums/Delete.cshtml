@model Productora.Web.Models.Album

@{
    ViewBag.Title = "Eliminar Album";
}

<body class="Gradient_Album">
    <div class="container" style="margin-top:80px;">
        <div class="card">
            <div class="card-header" style="background-image:url(../../Content/img/Interface/vinyl-1595847_1280.jpg); background-size:cover">
                <div class="py-2"></div>
                <div class="text-center text-white">
                    <h1>¿Deseas eliminar la siguiente información?</h1>
                </div>
                <div class="py-2"></div>
            </div>
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Artist.StageName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Artist.StageName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AlbumName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AlbumName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AlbumDescription)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AlbumDescription)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AlbumRelease)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AlbumRelease)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AlbumCover)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AlbumCover)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    </div>
                }
            </div>
        </div>
    </div>
</body>

