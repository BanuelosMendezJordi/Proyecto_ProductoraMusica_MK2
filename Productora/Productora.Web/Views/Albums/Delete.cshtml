@model Productora.Web.Models.Album

@{
    ViewBag.Title = "Eliminar Album";
}

<body class="Gradient_Album">
    <div class="container" style="margin-top:80px;">
        <div class="card" style="width:50rem">
            <div class="card-header bg-dark text-white text-center">
                <h2>Detalles del Album</h2>
            </div>
            <div class="card-body" style="background-image:url(../../Content/img/Interface/Microphone.jpg); background-size:cover">
                <div class="text-white" style="margin-top:30px;">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <img src="~/Content/img/AlbumCovers/@Model.Album_Cover" alt="..." class="card-img" height="233" width="240" />
                            </div>
                            <div class="col-md-8">
                                <div class="card-body bg-dark justify-content-center">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <h4 class="text-center">@Html.DisplayFor(model => model.AlbumName)</h4>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-10">
                                            <h5>Descripcion</h5>
                                            @Html.DisplayFor(model => model.AlbumDescription)
                                        </div>
                                    </div>
                                    <div>
                                        <div class="col-md-10">
                                            <h5>Lanzamiento</h5>
                                            @Html.DisplayFor(model => model.AlbumRelease)
                                        </div>
                                    </div>
                                    <div class="py-1"></div>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>