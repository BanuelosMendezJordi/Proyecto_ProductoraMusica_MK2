@model IEnumerable<Productora.Web.Models.Album>

@{
    ViewBag.Title = "Albums";
}


    <body class="Gradient_Album">
        <div class="container" style="margin-top:80px;">
            <div class="card" style="width:70rem">
                <div class="card-header bg-dark text-white text-center">
                    <h2>Albumes</h2>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Create", "Albums")" class="btn btn-success rounded-circle" style="font-weight:bold">+</a>
                    }
                    else
                    {
                        <div class="py-2"></div>
                    }
                </div>
                <div class="card-body" style="background-image:url(../../Content/img/Interface/Microphone.jpg); background-size:cover">
                    <div class="row justify-content-center">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-3">
                                <div class="card" style="width: 15rem;">
                                    <img style="width:100%; height:170px;" src="~/Content/img/AlbumCovers/@item.Album_Cover" alt="Imagen del artista" class="card-img">
                                    <div class="card-body text-center bg-dark text-white">
                                        <div class="row justify-content-center">
                                            <h5 class="card-title">
                                                @Html.DisplayFor(modelItem => item.AlbumName)
                                            </h5>
                                            <h6 class="card-title">
                                                @Html.DisplayFor(modelItem => item.AlbumRelease)
                                            </h6>
                                        </div>
                                        <div class="row justify-content-center">
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <a href="@Url.Action("Edit", "Albums", new { id = item.Id })" class="btn btn-primary btn-sm">Editar</a>
                                                <a href="@Url.Action("Details", "Albums", new { id = item.Id })" class="btn btn-success btn-sm">Detalles</a>
                                                <a href="@Url.Action("Delete", "Albums", new { id = item.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Details", "Albums", new { id = item.Id })" class="btn btn-success btn-sm">Detalles</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="text-white" style="margin-top:30px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

                  