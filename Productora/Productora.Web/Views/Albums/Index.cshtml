@model IEnumerable<Productora.Web.Models.Album>

@{
    ViewBag.Title = "Albumes";
}

<body class="Gradient_Album">
    <div class="container" style="margin-top:80px;">
        <div class="card">
            <div class="card-header" style="background-image:url(../../Content/img/Interface/vinyl-1595847_1280.jpg); background-size:cover">
                <div class="text-center text-white">
                    <h1>Albumes</h1>
                    @if (User.IsInRole("Admin") || User.IsInRole("Artist"))
                    {
                        <a href="@Url.Action("Create", "Albums")" class="btn btn-success rounded-circle" style="font-weight:bold">+</a>
                    }
                    else
                    {
                        <div class="py-2"></div>
                    }
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AlbumName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AlbumDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Artist.StageName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AlbumRelease)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Album_Cover)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlbumName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlbumDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Artist.StageName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlbumRelease)
                            </td>
                            <td>
                                @if (item.Album_Cover != null)
                                {
                                    <img src="~/Content/img/AlbumCovers/@item.Album_Cover" width="100" class="img-thumbnail"/>
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</body>


